<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.HelloWorld2">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.helloworld.activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.helloworld.activities.SplashActivity"
            android:exported="true"/>
        <activity
            android:name="com.example.helloworld.activities.MainActivity"
            android:exported="true"
            android:label="Jangs Web Berita"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.helloworld.activities.BeritaUtama"
            android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"
            android:exported="true"
            android:label="Jangs Web Berita"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.helloworld.activities.Detailed"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden"/>
        <activity
                android:name="com.example.helloworld.activities.Bisnis"
                android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.example.helloworld.activities.Olahraga"
            android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.example.helloworld.activities.Teknologi"
            android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"/>
        <activity
        android:name="com.example.helloworld.activities.Kesehatan"
        android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.example.helloworld.activities.Hiburan"
            android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.example.helloworld.activities.Profile" />
        <activity
            android:name="com.example.helloworld.activities.Settings" />
        <receiver
            android:name="com.example.helloworld.activities.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>
    </application>

</manifest>